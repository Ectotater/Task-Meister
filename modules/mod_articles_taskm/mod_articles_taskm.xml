<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>Articles - Taskmeister</name>
	<author>Fremont Teng</author>
	<creationDate>05/05/2020</creationDate>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>3.0.0</version>
	<description>This module displays a selected number of articles for the taskmeister.</description>
	<files>
		<filename module="mod_articles_taskm">mod_articles_taskm.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_articles_latest.ini</language>
		<language tag="en-GB">en-GB.mod_articles_latest.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_LATEST_NEWS" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="headerName"
					type="textarea"
					label="Header"
					description="Input your custom header here"
					filter="safehtml"
					cols="30"
					rows="1"
				/>

				<field
					name="catid"
					type="category"
					label="Category"
					description="The category of the articles to display."
					extension="com_content"
					multiple="true"
					filter="int_array"
				/>

				<field
					name="count"
					type="number"
					label="Count"
					description="How many articles to display."
					default="5"
					filter="integer"
				/>

				<field
					name="show_featured"
					type="list"
					label="Show Featured"
					description="Options to display, hide or only show featured articles"
					default=""
					filter="integer"
					>
					<option value="">Show</option>
					<option value="0">Hide</option>
					<option value="1">Only show featured</option>
				</field>

				<field
					name="ordering"
					type="list"
					label="Order"
					description="The order the articles are shown in"
					default="p_dsc"
					>
					<option value="c_dsc">Recently added first</option>
					<option value="m_dsc">Recently modified first</option>
					<option value="p_dsc">Recently published first</option>
					<option value="mc_dsc">Recently touched first</option>
					<option	value="random">Random</option>
				</field>

				<field
					name="user_id"
					type="list"
					label="User"
					description="Choose articles from a particular user or everyone"
					default="0"
					>
					<option value="0">Anyone</option>
					<option value="by_me">Added by me</option>
					<option value="not_me">Not added by me</option>
					<option value="created_by">Created by</option>
				</field>

				<field
					name="author"
					type="author"
					label="Authors"
					description="Choose articles by author"
					multiple="true"
					showon="user_id:created_by"
				/>
			</fieldset>

			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>

				<field
					name="moduleclass_sfx"
					type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
					rows="3"
				/>

				<field
					name="cache"
					type="list"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
					default="1"
					filter="integer"
					>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="number"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
					default="900"
					filter="integer"
				/>

				<field
					name="cachemode"
					type="hidden"
					default="static"
					>
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
